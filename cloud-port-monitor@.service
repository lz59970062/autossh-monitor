[Unit]
Description=Cloud Port Forward Monitor on %i
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=root
Environment=FORWARD_PORT=%i
ExecStart=/usr/local/bin/cloud_monitor.sh
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target 